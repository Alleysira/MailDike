<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:orientation="vertical">>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/login_bg_2" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textColor="#ffffff"
                android:textSize="32sp" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingBottom="30dp"
        android:background="@drawable/bg_corner_white"
        android:elevation="3dp">


        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColorHint="#999"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_corner_grey"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="12px"
            android:id="@+id/first_editText"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:hint="请输入您的账号/工号"
            android:maxLines="1"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColorHint="#999"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_corner_grey"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="20px"
            android:id="@+id/second_edittext_2"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColorHint="#999"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_corner_grey"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="20px"
            android:id="@+id/third_edittext"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:hint="请再次输入您的密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button11"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshapewhitebg"
                android:text="请上传您的位置属性"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#fcfcfc"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button9"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshapewhitebg"
                android:text="前往登录"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#fcfcfc"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>